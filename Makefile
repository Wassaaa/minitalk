################################################################################
# COMPILATION
################################################################################
CC				=	cc
CC_STRICT		=	-Wall -Wextra -Werror
CC_DEBUG		=	-g #-fsanitize=leak
HEADERS			=	-I $(LIBFT_INCLUDES) -I $(INCLUDES)
CC_FULL			=	$(CC) $(CC_STRICT) $(HEADERS) $(CC_DEBUG)

################################################################################
# LIBFT
################################################################################
LIBFT			=	./libft/libft.a
LIBFT_DIR		=	./libft
LIBFT_INCLUDES	=	./libft/include

################################################################################
# MANDATORY
################################################################################
NAME			=	minitalk
INCLUDES		=	./include
M_HEADER		=	$(INCLUDES)/minitalk.h

################################################################################
# CLIENT
################################################################################
CLIENT			=	client
C_MAIN			=	./client.c

################################################################################
# SERVER
################################################################################
SERVER			=	server
S_MAIN			=	./server.c

################################################################################
# RULES
################################################################################

all: $(NAME)

bonus: all

$(NAME): $(CLIENT) $(SERVER)

$(SERVER): $(LIBFT) $(S_MAIN)
	$(CC_FULL) $(S_MAIN) $(LIBFT) -o $(SERVER)

$(CLIENT): $(LIBFT) $(C_MAIN)
	$(CC_FULL) $(C_MAIN) $(LIBFT) -o $(CLIENT)

$(LIBFT): libft_force
	make -C $(LIBFT_DIR)

libft_force:
	@true

clean:
	rm -rf $(SERVER).dSYM/ $(CLIENT).dSYM/
	make clean -C $(LIBFT_DIR)

fclean: clean
	rm -f $(CLIENT) $(SERVER)
	make fclean -C $(LIBFT_DIR)

re: fclean all

################################################################################
# NORM
################################################################################
norm:
	norminette . $(LIBFT_DIR) | grep -v "OK!" || true

norm2:
	norminette . $(LIBFT_DIR)

################################################################################
# PHONY
################################################################################
.PHONY: all bonus re clean fclean libft_force
